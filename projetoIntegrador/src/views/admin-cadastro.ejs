<%- include('partials/header') %>

<main>
    <section class="admin-cadastro"> 
        <div class="container">
            <% if (servico) { %>
                <h1>Editar Serviços</h1>
            <% } else { %>
                <h1>Cadastro de Serviços</h1>
            <% } %>

            <% if (servico) { %>
            <form action="/cadastroAluno/editar/<%= servico.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <% } else { %>
            <form action="/cadastroAluno/cadastro/" method="POST" enctype="multipart/form-data">
            <% } %>
                <div class="align-row form-control">
                    <div class="field">
                        <label for="nome">Nome do Serviço</label>
                        <input type="text" id="nome" name="nome" value="<% if (servico) { %><%= servico.nome %><% } %>">
                    </div>
                    <div class="field">
                        <label for="valor">Preço do Serviço</label>
                        <input type="text" id="valor" name="valor" value="<% if (servico) { %><%= servico.valor %><% } %>">
                    </div>


                    <button class="btn btn-primary" type="submit">Enviar</button>
            
            </form>  
        </div>
        
    </section>
</main>
<%- include('partials/footer') %>